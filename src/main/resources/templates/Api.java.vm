package ${package}.${moduleName}.web.api;

import lombok.extern.slf4j.Slf4j;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.util.List;


import   ${package}.client.base.CommonResult;
import   ${package}.${moduleName}.service.${className}Service;
import   ${package}.service.base.BaseControllerImpl;
import   ${package}.service.base.BaseServiceAO;
import   ${package}.${moduleName}.client.domain.${className}DO;
import   ${package}.${moduleName}.client.query.${className}QueryDO;

/**
 * ${comments}
 *
 * @author ${author}
 * @email ${email}
 * @date ${datetime}
 */
@Slf4j
@RestController
@RequestMapping("/api/${pathName}")
public class ${className}Api extends BaseControllerImpl<${className}DO, ${className}QueryDO> {

    @Autowired
    private ${className}Service baseService;

    @Override
    public BaseServiceAO<${className}DO, ${className}QueryDO> getService() {
        return baseService;
    }
    /**
     * 通用查询逻辑
     *
     * @param request
     * @param response
     * @param q        查询对象
     * @return
     */
    @RequestMapping("query")
    public CommonResult<List<${className}DO>> select(HttpServletRequest request, HttpServletResponse response, @ModelAttribute("pojo") ${className}QueryDO q) {
        CommonResult<List<${className}DO>> query = getService().query(q);
        CommonResult<Integer> count = getService().count(q);
        query.setTotal(count.getResult());
        return query;
    }

    /**
     * 获取详情
     *
     * @param request
     * @param response
     * @return
     */
    @RequestMapping("get")
    public CommonResult<${className}DO> detail(HttpServletRequest request, HttpServletResponse response, @RequestParam("id") Long id) {
        return getService().get(id);
    }

    /**
     * 通用更新逻辑
     *
     * @param request
     * @param response
     * @param t
     * @return
     */
    @RequestMapping("update")
    public CommonResult<Long> update(HttpServletRequest request, HttpServletResponse response, @ModelAttribute("pojo") ${className}DO t) {
        return getService().modify(t);
    }

    /**
     * 通用删除逻辑
     *
     * @param request
     * @param response
     * @param id
     * @return
     */
    @RequestMapping("delete")
    public CommonResult<Long> delete(HttpServletRequest request, HttpServletResponse response, @RequestParam("id") Long id) {
        return getService().remove(id);
    }

    /**
     * 通用插入逻辑
     *
     * @param request
     * @param response
     * @param t
     * @return
     */
    @RequestMapping("add")
    public CommonResult<${className}DO> insert(HttpServletRequest request, HttpServletResponse response, @ModelAttribute("pojo") ${className}DO t) {
        return getService().save(t);
    }
}
